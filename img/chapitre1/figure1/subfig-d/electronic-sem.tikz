\colorlet{c_lenses}{black}
\colorlet{c_ray}{red}

\begin{tikzpicture}[rotate=-90, scale=0.3]  % transform shape = false

    % Gun
    \draw [pattern=north west lines] (-1, -1) -- ++ (1, 0) -- ++(0, 2) -- ++(-1, 0) -- ++(0, 0.5) -- ++(-0.5, 0) -- ++(0, -3) -- ++(0.5, 0) -- cycle;

